{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "paths": {
      "@hooks/*": [
        "hooks/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@containers/*": [
        "containers/*"
      ],      
      "@routes/*": [
        "routes/*"
      ],      
      "@styles/*": [
        "styles/*"
      ],                  
    },
    "strict": true,
  }
}